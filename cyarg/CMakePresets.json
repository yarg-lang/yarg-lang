{
    "version": 8,
    "configurePresets": [
        {
            "name": "host",
            "displayName": "Host (default build for use on host system)",
            "description": "Using defaults for your cmake install",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "YARG_DEVICE": "GENERIC_HOST",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": "",
                "CYARG_FEATURE_INTERACTIVE_TRACE": "TRUE"
            }
        },
        {
            "name": "host-test",
            "displayName": "Host Test (for test pass)",
            "description": "Using defaults for your cmake install",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "YARG_DEVICE": "GENERIC_HOST",
                "CMAKE_BUILD_TYPE": "Debug",
                "CMAKE_TOOLCHAIN_FILE": ""
            }
        },
        {
            "name": "xcode-host",
            "displayName": "Xcode Host",
            "description": "Using defaults for your Xcode install",
            "generator": "Xcode",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "YARG_DEVICE": "GENERIC_HOST",
                "CMAKE_TOOLCHAIN_FILE": ""
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Darwin"
            }
        },
        {
            "name": "target-pico",
            "displayName": "For Pico (RP2040, env setup required)",
            "description": "Using the Pico SDK ARM toolchain",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "YARG_DEVICE": "RASPBERRY_PI_PICO",
                "CMAKE_BUILD_TYPE": "Release"
            } 
        },
        {
            "name": "target-pico-debug",
            "displayName": "For Pico Debug (RP2040, env setup required)",
            "description": "Using the Pico SDK ARM toolchain",
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "YARG_DEVICE": "RASPBERRY_PI_PICO",
                "CMAKE_BUILD_TYPE": "Debug"
            } 
        }
    ]
}
